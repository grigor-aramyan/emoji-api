<%- include('admin-header.ejs') -%>

<div class="row" style="">
    <%- include('admin-sidebar.ejs') -%>

    <div class="col-9" style="overflow-x: hidden;padding-top:20px;padding-left: 20px;">
        <h2>New Giftbox</h2>
        <form>
            <div class="form-group" style="margin-bottom: 5px;">
              <label for="title">Title</label>
              <input type="text" class="form-control" id="title" name="title" aria-describedby="emailHelp" placeholder="Title">
            </div>


            <div class="form-group" style="margin-bottom: 5px;">
                <label for="description">Description</label>
                <textarea rows="4" class="form-control" id="description" name="description" aria-describedby="emailHelp" placeholder="Description..."></textarea>
            </div>
            <div class="form-group" style="margin-bottom: 5px;">
                <label for="size">Size</label>
                <input type="text" class="form-control" id="size" name="size" aria-describedby="emailHelp" placeholder="Size">
            </div>
            <div class="form-group" style="margin-bottom: 5px;">
                <label for="price">Price</label>
                <input type="text" class="form-control" id="price" name="price" aria-describedby="emailHelp" placeholder="Price">
            </div>
            <div class="form-group" style="margin-bottom: 5px;">
                <label for="gender">Gender</label>
                <select id="gender" name="gend">
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="other">Other</option>
                </select>
                <!-- <input type="text" class="form-control" id="price" aria-describedby="emailHelp" placeholder="Price"> -->
            </div>
            <div class="form-group" style="margin-bottom: 5px;">
                <label for="item">Item Description</label>
                <textarea rows="4" class="form-control" id="item" name="item" aria-describedby="emailHelp" placeholder="Description..."></textarea>
            </div>
            <div class="form-group" style="margin-bottom: 5px;">
                <label for="img">Image</label>
                <input type="file" accept="image/*" class="form-control" id="img" name="img" aria-describedby="emailHelp" />
            </div>
            
            <button type="submit" class="btn btn-primary mt-2">Submit</button>
        </form>
    </div>
</div>

<%- include('admin-footer.ejs') -%>
